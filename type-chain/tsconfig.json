{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist", // 모든 ts파일 각각을 dist폴더에 변환
    // "outFile": "./dist/index.js", 모든 ts파일을 index.js하나의 파일에 변환
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}